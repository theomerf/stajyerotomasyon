@{
    var isCollapsed = Context.Request.Cookies["Collapsed"] ?? "true";
}

<div class="container">
    <div class="row">
        <div class="page-header @((isCollapsed == "true") ? "collapsed" : "")">
            <div class="header-main">
                <div class="header-content">
                    <h1><i class="fas fa-graduation-cap"></i> Anasayfa</h1>
                    <p>Hoş geldiniz, @User.FindFirst("FullName")?.Value! Staj süreçlerinizi kolayca yönetin ve takip edin.</p>
                </div>
            </div>

            <div class="header-toggle-wrapper">
                <button class="btn-toggle-header" hx-on:click="toggleHeaderCollapse(event)" title="Küçült/Genişlet">
                    <i class="fas fa-chevron-up"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="row g-4 mb-4">
        <div class="col col-md-4">
            @await Component.InvokeAsync("InternsSummary")
        </div>
        <div class="col col-md-4">
            @await Component.InvokeAsync("EndedInternshipStats")
        </div>
        <div class="col col-md-4">
            @await Component.InvokeAsync("ApplicationsOnWaitStats")
        </div>
    </div>
    <div class="row g-3 mb-4">
        <div class="col col-md-3">
            <a href="/Interns/AddIntern" hx-get="/Interns/AddIntern" hx-target="#content" hx-push-url="true">
                <div class="card action-card">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                        <div class="card-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <h3 class="action-card-title mt-4">Yeni Stajyer Ekle</h3>
                        <p class="action-card-p">Sisteme yeni stajyer kaydı oluşturun</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col col-md-3">
            <a href="/Applications/Index?Status=OnWait" hx-get="/Applications/Index?Status=OnWait" hx-target="#content" hx-push-url="true">
                <div class="card action-card">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                        <div class="card-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <h3 class="action-card-title mt-4">Başvuru Değerlendir</h3>
                        <p class="action-card-p">Bekleyen staj başvurularını inceleyin</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col col-md-3">
            <a href="/Works/AddWork" hx-get="/Works/AddWork" hx-target="#content" hx-push-url="true">
                <div class="card action-card">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                        <div class="card-icon">
                            <i class="fa-solid fa-briefcase"></i>
                        </div>
                        <h3 class="action-card-title mt-4">Görev Oluştur</h3>
                        <p class="action-card-p">Stajyerler için görevler <br />oluşturun</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col col-md-3">
            <a href="/Settings/Index" hx-get="/Settings/Index" hx-target="#content" hx-push-url="true">
                <div class="card action-card">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                        <div class="card-icon">
                            <i class="fas fa-cog"></i>
                        </div>
                        <h3 class="action-card-title mt-4">Sistem Ayarları</h3>
                        <p class="action-card-p">Staj yönetim ayarlarınızı düzenleyin</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row g-3 mb-4">
        @await Component.InvokeAsync("DashboardCharts")
    </div>
</div>

