@model StatsDto

<div class="card p-4 card-before card-hover">
    <div class="card-body">
        <div class="row stat-card-header">
            <div class="col col-md-9">
                <div class="card-title stat-card-title">Tamamlanan Stajlar</div>
            </div>
            <div class="col col-md-3">
                <div class="card-icon">
                    <i class="fa-solid fa-calendar-check"></i>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card-text stat-card-value">@Model.ThisMonthsCount.ToString()</div>
        </div>
        <div class="row">
            <div class="card-text stat-card-change @(Model.SignedPercentage.Contains("+") ? "positive" : "negative")">
                <i class="fas @(Model.SignedPercentage.Contains("+") ? "fa-arrow-up" : "fa-arrow-down")"></i>
                <span>@Model.Percentage% bu ay (@Model.SignedDifference)</span>
            </div>
        </div>
    </div>
</div>