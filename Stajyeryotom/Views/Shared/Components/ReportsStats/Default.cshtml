@model IEnumerable<StatsDto>

@{
    var totalCount = 0;
    foreach(var stats in Model)
    {
        totalCount += stats.TotalCount;
    }
}

<div class="reports-stats-grid">
    <div class="stat-card">
        <div class="stat-card-header">
            <div class="stat-card-title">Toplam</div>
            <div class="stat-card-icon">
                <i class="fas fa-file-text"></i>
            </div>
        </div>
        <div class="stat-card-value">@totalCount </div>
    </div>
    @foreach (var stat in Model)
    {
        var title = "";
        var iconClass = "";

        switch (stat.Key)
        {
            case "Read":
                title = "Okunan";
                iconClass = "fa-check";
                break;
            case "NotRead":
                title = "Okunmayan";
                iconClass = "fa-times";
                break;
        }

        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-card-title">@title</div>
                <div class="stat-card-icon">
                    <i class="fas @iconClass"></i>
                </div>
            </div>
            <div class="stat-card-value">@stat.TotalCount</div>
            <div class="stat-card-change @(stat.SignedPercentage.Contains("+") ? "positive" : "negative")">
                <i class="fas @(stat.SignedPercentage.Contains("+") ? "fa-arrow-up" : "fa-arrow-down")"></i>
                <span>@stat.SignedPercentage% bu ay (@stat.SignedDifference)</span>
            </div>
        </div>
    }
</div>