<div class="col col-md-6">
    <div class="card chart-card">
        <div class="card-header">
            <h3><i class="fas fa-pie-chart"></i> Aylık Staj Başvuruları</h3>
        </div>
        <div class="card-body chart-card-body" style="height:645px;">
            <canvas id="monthlyApplicationChart" style="width: 100%; height: 100%;"></canvas>
        </div>
    </div>
</div>
<div class="col col-md-6">
    <div class="card chart-card">
        <div class="card-header">
            <h3><i class="fas fa-pie-chart"></i> Departmanlara Göre Stajyer Dağılımı</h3>
        </div>
        <div class="card-body chart-card-body">
            <div class="container" style="position: relative; height: 500px; width: 100%;">
                <canvas id="departmentPieChart"></canvas>
            </div>
            <div id="customLegend" class="simple-legend mt-5"></div>
        </div>
    </div>
</div>

<script>
    window.chartDataForComponent = @Html.Raw(ViewBag.ChartData);
    window.monthlyDataForComponent = @Html.Raw(ViewBag.MonthlyDataJson);
</script>