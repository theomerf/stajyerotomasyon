<div class="content-table">
    <div class="reports-table-header">
        <div class="header-cell">
            YAZAN BİLGİLERİ
            <div class="sort-controls">
                <div class="sort-buttons-row">
                    <button hx-on:click="sortingButton(event);" class="sort-btn" data-sort="NAME_ASC" title="A-Z Sırala">
                        <i class="fas fa-sort-alpha-down"></i>
                    </button>
                    <button hx-on:click="sortingButton(event);" class="sort-btn" data-sort="NAME_DESC" title="Z-A Sırala">
                        <i class="fas fa-sort-alpha-up"></i>
                    </button>
                </div>
                <button hx-on:click="clearSortButtonForReports(event);" class="clear-cell-sort-btn" data-category="NAME" title="Sıralamayı Temizle">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="header-cell">
            RAPOR BAŞLIĞI / GÖREV ADI
            <div class="sort-controls">
                <div class="sort-buttons-row">
                    <button hx-on:click="sortingButton(event);" class="sort-btn" data-sort="REPORT_ASC" title="A-Z Sırala">
                        <i class="fas fa-sort-alpha-down"></i>
                    </button>
                    <button hx-on:click="sortingButton(event);" class="sort-btn" data-sort="REPORT_DESC" title="Z-A Sırala">
                        <i class="fas fa-sort-alpha-up"></i>
                    </button>
                </div>
                <button hx-on:click="clearSortButtonForReports(event);" class="clear-cell-sort-btn" data-category="REPORT" title="Sıralamayı Temizle">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="header-cell">
            RAPOR TARİHİ
            <div class="sort-controls">
                <div class="sort-buttons-row">
                    <button hx-on:click="sortingButton(event);" class="sort-btn" data-sort="DATE_ASC" title="Eskiden Yeniye">
                        <i class="fas fa-sort-numeric-down"></i>
                    </button>
                    <button hx-on:click="sortingButton(event);" class="sort-btn" data-sort="DATE_DESC" title="Yeniden Eskiye">
                        <i class="fas fa-sort-numeric-up"></i>
                    </button>
                </div>
                <button hx-on:click="clearSortButtonForReports(event);" class="clear-cell-sort-btn" data-category="DATE" title="Sıralamayı Temizle">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="header-cell">
            DURUM
            <div class="sort-controls">
                <div class="sort-buttons-row">
                    <button hx-on:click="sortingButton(event);" class="sort-btn" data-sort="READ" title="Okunanlar">
                        <i class="fa-solid fa-circle-check"></i>
                    </button>
                    <button hx-on:click="sortingButton(event);" class="sort-btn" data-sort="NOTREAD" title="Okunmayanlar">
                        <i class="fa-solid fa-circle-xmark"></i>
                    </button>
                </div>
                <button hx-on:click="clearSortButtonForReports(event);" class="clear-cell-sort-btn" data-category="STATUS" title="Sıralamayı Temizle">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="header-cell">İŞLEMLER</div>
    </div>

    @{
        var dateTime = DateTime.UtcNow;
        foreach (var report in Model?.List ?? new List<ReportDto>())
        {

            <div class="reports-table-row">
                <div class="cell student-info">
                    <div class="student-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="student-details">
                        <h4>@String.Concat(report.AccountFirstName + " " + report.AccountLastName)</h4>
                    </div>
                </div>
                <div class="cell">
                    <div class="department-info">
                        <strong>@report.ReportTitle</strong>
                        <span>@(report.WorkName == "" ? "Günlük Rapor" : "")</span>
                    </div>
                </div>
                <div class="cell">
                    <div class="date-info">
                        <div class="date-item">
                            <i class="fa-solid fa-calendar-days" style="color: #16cd13;"></i>
                            <span class="internshipEndDate" data-date="@report.CreatedAt">@(report.CreatedAt.ToString("dd.MM.yyyy, HH:mm"))</span>
                        </div>
                    </div>
                </div>
                <div class="cell">
                    @{
                        string status = "";

                        switch (@report.Status)
                        {
                            case "Read":
                                status = "Okundu";
                                break;
                            case "NotRead":
                                status = "Okunmadı";
                                break;
                            default:
                                status = "";
                                break;
                        }
                    }
                    <span class="status-badge @report.Status">@status</span>
                </div>
                <div class="cell">
                    <div class="action-buttons">
                        <a href="/Reports/View/@(report.ReportId)" hx-get="/Reports/View/@(report.ReportId)" hx-target="#content" hx-push-url="true" class="btn-action btn-view" title="Görüntüle">
                            <i class="fas fa-eye"></i>
                        </a>
                        @if (User.IsInRole("Stajyer"))
                        {
                            <a href="/Reports/UpdateReport/@(report.ReportId)" hx-get="/Reports/UpdateReport/@(report.ReportId)" hx-target="#content" hx-push-url="true" class="btn-action edit" title="Düzenle">
                                <i class="fas fa-edit"></i>
                            </a>
                        }

                        <form method="post" asp-action="DeleteReport" asp-route-reportId="@report.ReportId" class="hxform" hx-post="/Reports/DeleteReport?reportId=@(report.ReportId)" hx-target="#content" hx-push-url="true">
                            <button type="submit" title="Sil" class="btn-action delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }

    }
</div>
<div class="row">
    <div>
        <partial name="Small/_Pagination" />
    </div>
</div>